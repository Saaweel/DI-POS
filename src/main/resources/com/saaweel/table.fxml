            <ListView fx:id="tableBillListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #424242;" />
        </ScrollPane>
        <Label fx:id="totalText" maxWidth="1.7976931348623157E308" style="-fx-background-color: #424242;" text="Total: 0 â‚¬" textFill="WHITE" VBox.vgrow="ALWAYS">
